<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_background"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="ID Number:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30313031"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Name:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Name"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Phone No:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254707070707"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Gender:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Reason for visit:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestReasonForVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample reason"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Time In:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestTimeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-30T04:25:38.679662"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Time Out:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestTimeOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-30T04:25:38.679662"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Company:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Company"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Building:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestBuilding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Building"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Guard:"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_guestGuard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Guard"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signInGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Sign In"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_deleteGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Delete"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signOutGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Sign Out"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</androidx.cardview.widget.CardView>
